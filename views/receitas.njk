{% extends "layout.njk" %}

{% block head %}
  <title>Receitas - FoodFy</title>
{% endblock %}

{% block recipes %}

<div class="cards">
  <!--estrutura de repetição para pagina receitas-->
  {% for item in items %}

  <div class="card" id="{{item.index}}">
    <div class="thumbnail">
        <img src="{{item.image}}" alt="Imagem de {{item.title}}" />
    </div>
    <p class="name">{{item.title}}</p>
    <p class="by">{{item.author}}</p>
  </div>

  {% endfor %}

</div>
<script src='script.js'></script>
{% endblock %}